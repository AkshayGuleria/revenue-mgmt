# =================================
# Production Environment Configuration
# =================================
# IMPORTANT: Copy this file to .env.production and fill in actual values
# Never commit .env.production to version control!

# =================================
# Application
# =================================
NODE_ENV=production
PORT=5177

# =================================
# Database Configuration
# =================================
# Production Database URL
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=SCHEMA
DATABASE_URL=postgresql://revenue:STRONG_PASSWORD_HERE@localhost:5432/revenue_db?schema=public

# Database Connection Pool (adjust based on VPS capacity)
DB_POOL_MIN=2
DB_POOL_MAX=10

# =================================
# Security
# =================================
# JWT Secret (generate with: openssl rand -base64 32)
JWT_SECRET=CHANGE_THIS_TO_RANDOM_SECRET

# API Keys (if integrating with auth server)
API_KEY=CHANGE_THIS_TO_RANDOM_API_KEY

# CORS Origins (comma-separated)
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# =================================
# Logging
# =================================
LOG_LEVEL=info
LOG_DIR=./logs

# =================================
# Email Configuration (Phase 2)
# =================================
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=billing@yourdomain.com
# SMTP_PASSWORD=your_smtp_password
# SMTP_FROM=billing@yourdomain.com

# =================================
# Payment Gateway (Phase 4)
# =================================
# STRIPE_SECRET_KEY=sk_live_...
# STRIPE_WEBHOOK_SECRET=whsec_...
# STRIPE_PUBLISHABLE_KEY=pk_live_...

# =================================
# Redis (Phase 2 - BullMQ)
# =================================
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=
# REDIS_DB=0

# =================================
# Monitoring & APM
# =================================
# SENTRY_DSN=https://...@sentry.io/...
# NEW_RELIC_LICENSE_KEY=...
# NEW_RELIC_APP_NAME=revenue-backend-production

# =================================
# Feature Flags
# =================================
ENABLE_SWAGGER=false
ENABLE_DEBUG_LOGGING=false

# =================================
# Rate Limiting
# =================================
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# =================================
# File Upload
# =================================
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads

# =================================
# Backup Configuration
# =================================
BACKUP_DIR=./backups
BACKUP_RETENTION_DAYS=30

# =================================
# Docker Compose Variables
# =================================
DB_USER=revenue
DB_PASSWORD=STRONG_PASSWORD_HERE
DB_NAME=revenue_db
DB_PORT=5432
